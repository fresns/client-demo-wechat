  display: flex;
  border-top: 1rpx solid var(--weui-FG-3);
  margin-top: 30rpx;
}

.sticker-tab {
  padding: 20rpx;
}

.sticker-tab_on text {
  padding-bottom: 5rpx;
  border-bottom: 3rpx solid var(--weui-GREEN-100);
}

.sticker-view {
  height: 350rpx;
}

.sticker-images {
  display: flex;
  flex-wrap: wrap;
  justify-content: flex-start;
  align-items: flex-start;
}

.sticker-images image {
  margin: 20rpx;
}

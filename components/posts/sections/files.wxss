.content-files {
  margin-top: 30rpx;
}

.file-images {
  display: flex;
}

.file-image-1 image {
  width: 60%;
}
.file-image-2 image {
  width: 45%;
  margin-right: 20rpx;
}
.file-image-3 image {
  width: 28%;
  margin-right: 20rpx;
}
.file-image-4 image {
  width: 45%;
  margin-right: 20rpx;
  margin-bottom: 20rpx;
}
.file-image-5 image,
.file-image-6 image,
.file-image-7 image,
.file-image-8 image,
.file-image-9 image {
  width: 28%;
  margin-right: 20rpx;
  margin-bottom: 20rpx;
}

.file-video video {
  width: 100%;
}

.file-audio audio {
  width: 100%;
}

.file-document {
  width: 100%;
  display: flex;
  align-items: center;
  background-color: var(--weui-BG-0);
  color: var(--weui-FG-1);
  font-size: 28rpx;
  border-radius: 8rpx;
  margin-top: 20rpx;
}

.file-document .doc-icon {
  background-color: var(--weui-ORANGE);
  border-top-left-radius: 8rpx;
  border-bottom-left-radius: 8rpx;
  color: var(--weui-FG-3);
  padding: 24rpx 32rpx 16rpx 32rpx;
}


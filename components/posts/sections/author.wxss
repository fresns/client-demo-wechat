.user-avatar {
  width: 132rpx;
  height: 132rpx;
}

.user-avatar .avatar-img {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin: 26rpx;
  margin-bottom: -14rpx;
}

.user-avatar .avatar-decorate {
  position: absolute;
  width: 132rpx;
  height: 132rpx;
  margin-bottom: -14rpx;
  z-index: 99;
}

.user-info {
  overflow: hidden;
  margin-top: 20rpx;
}

.user-info .user-nickname {
  font-size: 32rpx;
  color: var(--weui-FG-0);
}

.user-info .user-verified {
  margin-right: -12rpx;
}

.user-info .user-verified image {
  height: 36rpx;
  margin: 0 8rpx;
  margin-top: 6rpx;
}

.user-info .user-name {
  margin-left: 16rpx;
  margin-top: 4rpx;
  font-size: 28rpx;
  color: var(--weui-FG-1);
}

.user-info .user-role-icon image {
  height: 36rpx;
  margin: 0 8rpx;
  margin-top: 8rpx;
}

.user-info .user-role-name {
  padding-top: 12rpx;
}

.user-info .user-role-name .weui-badge {
  font-size: 20rpx;
  font-weight: 400;
  background-color: var(--weui-BG-0);
  color: var(--weui-FG-2);
  margin-left: 10rpx;
}

.user-icons {
  margin-top: 8rpx;
  margin-left: 12rpx;
}

.user-icons image {
  height: 32rpx;
  margin-right: 16rpx;
  margin-top: 4rpx;
}

.content-time {
  font-size: 24rpx;
  color: var(--weui-FG-1);
}

.content-location {
  font-size: 24rpx;
  margin-left: 30rpx;
  color: var(--weui-FG-1);
}

.content-location navigator {
  display: flex;
  align-items: center;
}


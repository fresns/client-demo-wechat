.weui-navigation-bar__page {
  --height: calc(70rpx + env(safe-area-inset-top));
  --padding-top: env(safe-area-inset-top);
}

.weui-navigation-bar__customRoute {
  --height: 110rpx;
  --padding-top: 0;
}

.weui-navigation-bar__inner {
  height: var(--height);
  padding-top: var(--padding-top);
  width: 100%;
  display: flex;
  flex-direction: row;
  box-sizing: border-box;
  align-items: center;
  justify-content: center;
}

.weui-navigation-bar__left {
  width: 30%;
}

.weui-navigation-bar__center {
  width: 40%;
  font-size: 30rpx;
  font-weight: bold;
  flex: 1;
  flex-direction: row;
  display: flex;
  text-align: center;
  align-items: center;
  justify-content: center;
}

.weui-navigation-bar__right {
  width: 30%;
}

.weui-navigation-bar__buttons {
  flex: 1;
  flex-direction: row;
  display: flex;
}

.weui-navigation-bar__button {
  width: 40rpx;
  height: 30rpx;
  margin-left: 30rpx;
  color: var(--weui-FG);
}

.weui-navigation-bar__btn_goback {
  font-size: 30rpx;
  width: 30rpx;
  height: 30rpx;
  color: var(--weui-FG);
  background-size: 100%;
  background: transparent
    url("data:image/svg+xml,<svg xmlns='http://www.w3.org/2000/svg' width='16' height='16' fill='currentColor' stroke='currentColor' stroke-width='2' viewBox='0 0 16 16'><path fill-rule='evenodd' d='M11.354 1.646a.5.5 0 0 1 0 .708L5.707 8l5.647 5.646a.5.5 0 0 1-.708.708l-6-6a.5.5 0 0 1 0-.708l6-6a.5.5 0 0 1 .708 0'/></svg>")
    no-repeat 50% 50%;
}

.weui-navigation-bar__btn_gohome {
  font-size: 30rpx;
  width: 30rpx;
  height: 30rpx;
  color: var(--weui-FG);
  background-size: 100%;
  background: transparent
    url("data:image/svg+xml,<svg xmlns='http://www.w3.org/2000/svg' width='16' height='16' fill='currentColor' stroke='currentColor' viewBox='0 0 16 16'><path d='M8.707 1.5a1 1 0 0 0-1.414 0L.646 8.146a.5.5 0 0 0 .708.708L2 8.207V13.5A1.5 1.5 0 0 0 3.5 15h9a1.5 1.5 0 0 0 1.5-1.5V8.207l.646.647a.5.5 0 0 0 .708-.708L13 5.793V2.5a.5.5 0 0 0-.5-.5h-1a.5.5 0 0 0-.5.5v1.293zM13 7.207V13.5a.5.5 0 0 1-.5.5h-9a.5.5 0 0 1-.5-.5V7.207l5-5z'/></svg>")
    no-repeat 50% 50%;
}

.weui-navigation-bar__loading {
  margin-left: -34rpx;
  margin-right: 10rpx;
}


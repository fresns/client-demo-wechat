.setting-cells {
  padding-top: 20px;
}

.avatar-img {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  margin-bottom: -14rpx;
}

.weui-border {
  border-top: 1rpx solid var(--weui-FG-3);
  border-bottom: 1rpx solid var(--weui-FG-3);
}

.weui-border-top {
  border-top: 1rpx solid var(--weui-FG-3);
}

.weui-border-bottom {
  border-bottom: 1rpx solid var(--weui-FG-3);
}

/* 账户中心样式 */
.account-center {
  border-radius: 10rpx;
  box-shadow: 1rpx 1rpx 10rpx 1rpx var(--weui-FG-3);
  background-color: var(--weui-BG-2);
  margin: 30rpx 30rpx;
  margin-bottom: 80rpx;
  padding: 30rpx;
}

.account-logo image {
  width: 160rpx;
}

.account-title {
  font-size: 32rpx;
  font-weight: bold;
  margin: 8rpx 0;
}

.account-description {
  color: var(--weui-FG-1);
}

.account-items {
  margin: 8rpx 0;
  color: var(--weui-FG-2);
}

.account-items .account-item {
  padding-left: 40rpx;
}


.message {
  margin-bottom: 40rpx;
}

.avatar-img {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-bottom: -14rpx;
  margin-left: 30rpx;
  margin-right: 30rpx;
}

.message-content {
  padding: 16rpx 20rpx;
  border-radius: 10rpx;
}

.message-content-me {
  background-color: var(--weui-TEXTGREEN);
  float: right;
  margin-left: 120rpx;
}

.message-content-it {
  background-color: var(--weui-BG);
  margin-right: 120rpx;
}

.message-file-me {
  float: right;
  margin-left: 120rpx;
}

.message-file-it {
  margin-right: 120rpx;
}

.send-message .weui-tabbar__label {
  width: 90%;
  margin: 0 auto;
  text-align: left;
  border-radius: 72rpx;
  background-color: var(--weui-TAG-BACKGROUND-BLACK);
  color: var(--weui-TAG-TEXT-BLACK);
  padding: 16rpx 32rpx;
  font-size: 32rpx;
}

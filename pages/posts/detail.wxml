<view class="page" data-weui-theme="{{ theme }}">
    <!--帖子详情-->
    <block wx:if="{{ !post }}">
        <loading status="{{ loadingStatus }}" tipType="{{ loadingTipType }}"></loading>
    </block>
    <block wx:if="{{ post }}">
        <post post="{{ post }}" type="detail"></post>
    </block>

    <!--评论列表-->
    <view class="weui-panel weui-panel_access">
        <view class="weui-panel__hd">{{ commentName }}: {{ post.commentCount }}</view>
        <view class="weui-panel__bd">
            <!-- 评论列表 -->
            <view class="weui-media-box weui-media-box_text" wx:for="{{ comments }}" wx:for-item="comment" wx:key="cid">
                <comment comment="{{ comment }}" type="list"></comment>
            </view>
        </view>
    </view>

    <!-- 加载动效 -->
    <loading status="{{ loadingStatus }}" tipType="{{ loadingTipType }}"></loading>

    <!-- 评论框 -->
    <view class="weui-tabbar comment-box-btn">
        <view class="weui-tabbar__item" bind:tap="onClickCreateComment">
            <view class="weui-tabbar__label">
                {{ commentBtnName }}
            </view>
        </view>
    </view>

    <mp-half-screen-dialog show="{{ showCommentBox }}" title="{{ title }}">
        <view slot="desc">
            <comment-box pid="{{ post.pid }}" cid="" nickname="{{ nickname }}"/>
        </view>
    </mp-half-screen-dialog>

    <view class="weui-loadmore weui-loadmore_line tabbar-spacing">
        <text class="weui-loadmore__tips">Powered by Fresns</text>
    </view>
</view>

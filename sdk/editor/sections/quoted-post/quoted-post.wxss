.quote-post-box {
  background-color: var(--weui-BG-2);
  padding: 40rpx;
}

.quote-post {
  padding: 20rpx 30rpx;
  font-size: 28rpx;
  background-color: var(--weui-BG-0);
  border-radius: 12rpx;
}

.quote-post-avatar image {
  width: 80rpx;
  height: 80rpx;
  border-radius: 8rpx;
  margin-right: 12rpx;
}

.quote-post-content {
  color: var(--weui-FG-0);
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  word-break: break-all;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.quote-post-group {
  color: var(--weui-FG-1);
  text-align: right;
  border-top: 1rpx solid var(--weui-FG-4);
  margin-top: 8rpx;
  padding-top: 8rpx;
}

.fresns_sticker {
  padding: 0;
  margin: 0;
  zoom: 0.5;
}
